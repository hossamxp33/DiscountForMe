<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashAndIntro.ChooseLanguage.View.ChooseLanguageActivity">
    <ImageView
        android:id="@+id/ivHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/choose_language" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/letUsSave"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/rlCallNow"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight=".48"
            android:background="@drawable/drawable_rounded_gold"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivPhone"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@mipmap/phone" />

            <TextView
                android:id="@+id/tvCallNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/ivPhone"
                android:text="@string/callNow"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".04" />

        <RelativeLayout
            android:id="@+id/rlChat"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight=".48"
            android:background="@drawable/drawable_gold_stroke"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivChat"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:src="@mipmap/message_g" />

            <TextView
                android:id="@+id/tvChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/ivChat"
                android:text="@string/contactNow"
                android:textColor="@color/buttonColor"
                android:textSize="14sp" />

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>